<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="Minesweeper" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid x:Name="mainGrid" >
        <Grid.RowDefinitions>
            <RowDefinition Name="ControlBar" Height="0.15*"/>
            <RowDefinition Name="FieldRow" Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="txtMineCounter" Grid.Row="0" Width="100" Height="40" HorizontalAlignment="Left"
                     HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="25" Margin="45 0 0 0"
                     IsEnabled="False" Foreground="Black" BorderBrush="Black" BorderThickness="2"/>
        <TextBox x:Name="txtTimer" Grid.Row="0"  Width="100" Height="40" Text="0" HorizontalAlignment="Right"
                     HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0 0 45 0"
                     FontSize="25" IsEnabled="False" Foreground="Black" BorderBrush="Black" BorderThickness="2"/>
    </Grid>
</Window>
